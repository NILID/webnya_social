.span6.offset3

  = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal well' }) do |f|
    %fieldset
      %legend Sign in
      .control-group
        = f.label :email, class: 'control-label'
        .controls= f.email_field :email, autofocus: true, autocomplete: 'email'

      .control-group
        = f.label :password, class: 'control-label'
        .controls= f.password_field :password, autocomplete: 'current-password'

      -if devise_mapping.rememberable?
        .control-group
          = f.label :remember_me, class: 'control-label'
          .controls= f.check_box :remember_me

      .form-actions= f.submit "Log in", class: 'btn btn-primary'

  = render "devise/shared/links"
