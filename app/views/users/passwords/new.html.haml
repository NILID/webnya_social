.span6.offset3

  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal well' }) do |f|
    %fieldset
      %legend Forgot your password?
      = render "devise/shared/error_messages", resource: resource

      .control-group
        = f.label :email, class: 'control-label'
        .controls= f.email_field :email, autofocus: true, autocomplete: 'email'

      .form-actions= f.submit "Send me reset password instructions", class: 'btn btn-primary'

  = render "devise/shared/links"
