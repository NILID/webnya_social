.row
  .col-6.offset-3
    .card
      .card-header Change your password
      .card-body
        = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          = f.hidden_field :reset_password_token
          = f.password_field :password,
            autofocus: true,
            autocomplete: "new-password",
            help: @minimum_password_length ? "#{@minimum_password_length} characters minimum" : nil

          = f.password_field :password_confirmation, autocomplete: "off"
          = f.form_group do
            = f.primary "Change my password"
        = render "devise/shared/links"
