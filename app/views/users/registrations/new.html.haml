.span6.offset3
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal well' }) do |f|
    %fieldset
      %legend Sign up
      = devise_error_messages!

      .control-group
        = f.label :login, class: 'control-label'
        .controls= f.text_field :login

      .control-group
        = f.label :email, class: 'control-label'
        .controls= f.email_field :email, autofocus: true

      .control-group
        = f.label :password, class: 'control-label'
        .controls
          = f.password_field :password, autocomplete: 'off'
          - if @minimum_password_length
            %span.help-block #{@minimum_password_length} characters minimum

      .control-group
        = f.label :password_confirmation, class: 'control-label'
        .controls= f.password_field :password_confirmation, autocomplete: 'off'

      .form-actions= f.submit "Sign up", class: 'btn btn-primary'

  = render "devise/shared/links"